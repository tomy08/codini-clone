---
const imgs = [
  { img: '/images/categories/horno-categoria.webp', url: '/categorias/hornos' },
  {
    img: '/images/categories/lavarropa-categoria.webp',
    url: '/categorias/lavarropas-semiautomaticos',
  },
  {
    img: '/images/categories/lavarropas-automatico-categoria.webp',
    url: '/categorias/lavarropas-automaticos',
  },
  {
    img: '/images/categories/secaropa-categoria.webp',
    url: '/categorias/secarropas',
  },
  {
    img: '/images/categories/ventilador-categoria.webp',
    url: '/categorias/ventiladores-de-pie',
  },
  {
    img: '/images/categories/ventilador-techo-categoria.webp',
    url: '/categorias/ventiladores-de-techo',
  },
]
---

<div class="grid grid-cols-2 gap-6 sm:grid-cols-3 sm:gap-4">
  {
    imgs.map((item) => (
      <a
        class="relative overflow-hidden bg-gray-200 rounded-lg aspect-w-16 aspect-h-9 max-w-64 mx-auto"
        href={item.url}
      >
        <img src={item.img} alt="" class="object-cover w-full h-full" />
      </a>
    ))
  }
</div>
