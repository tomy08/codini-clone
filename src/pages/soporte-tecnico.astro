---
import Layout from '../layouts/Layout.astro'
import Breadcrumb from '../components/shared/Breadcrumb.astro'
---

<Layout title="Codini">
  <Breadcrumb />
  <h1
    class="flex items-center justify-center mt-8 text-black font-bold text-3xl"
  >
    Soporte Técnico
  </h1>
  <div class="flex justify-center pt-0 mt-0">
    <form action="#" class="flex flex-col items-center w-full max-w-md">
      <label class="sr-only" for="nombre">Nombre completo</label>
      <input
        class="w-full rounded-lg p-3 text-sm bg-gray-200 mt-10"
        placeholder="Nombre completo:"
        type="text"
        id="name"
      />
      <label class="sr-only" for="email">Dirección email</label>
      <input
        class="w-full rounded-lg p-3 text-sm bg-gray-200 mt-10"
        placeholder="Dirección email:"
        type="email"
        id="email"
      />
      <label class="sr-only" for="dni">DNI</label>
      <input
        class="w-full rounded-lg p-3 text-sm bg-gray-200 mt-10"
        placeholder="DNI:"
        type="text"
        id="dni"
      />
      <label class="sr-only" for="telefono">Teléfono</label>
      <input
        class="w-full rounded-lg p-3 text-sm bg-gray-200 mt-10"
        placeholder="Teléfono:"
        type="text"
        id="telefono"
      />
      <label class="sr-only" for="direccion">Dirección</label>
      <input
        class="w-full rounded-lg p-3 text-sm bg-gray-200 mt-10"
        placeholder="Dirección:"
        type="text"
        id="direccion"
      />
      <div class="w-full mt-10">
        <label for="provincia" class="block text-sm font-medium text-gray-900"></label>
        <select
          name="provincia"
          id="provincia"
          class="w-full rounded-lg p-3 text-sm bg-gray-200 mt-2"
        >
        <option value="" disabled selected hidden class="text-gray-400">Seleccionar una opción</option>

        <option value="CABA">Ciudad Autónoma de Buenos Aires</option>
          <option value="BA">Buenos Aires</option>
          <option value="CT">Catamarca</option>
          <option value="CH">Chaco</option>
          <option value="CB">Chubut</option>
          <option value="CD">Córdoba</option>
          <option value="CR">Corrientes</option>
          <option value="ER">Entre Ríos</option>
          <option value="FO">Formosa</option>
          <option value="JJ">Jujuy</option>
          <option value="LP">La Pampa</option>
          <option value="LR">La Rioja</option>
          <option value="MZ">Mendoza</option>
          <option value="MI">Misiones</option>
          <option value="NQ">Neuquén</option>
          <option value="RN">Río Negro</option>
          <option value="SA">Salta</option>
          <option value="SJ">San Juan</option>
          <option value="SL">San Luis</option>
          <option value="SC">Santa Cruz</option>
          <option value="SF">Santa Fe</option>
          <option value="SE">Santiago del Estero</option>
          <option value="TF">Tierra del Fuego</option>
          <option value="TM">Tucumán</option>
        </select>
      </div>
      <label class="sr-only" for="localidad">Localidad</label>
      <input
        class="w-full rounded-lg p-3 text-sm bg-gray-200 mt-10"
        placeholder="Localidad:"
        type="text"
        id="localidad"
      />
      <button
        type="submit"
        class="inline-block w-full rounded-lg bg-green-section px-5 py-3 font-medium text-white sm:w-auto mt-10 mb-8"
      >
        Continuar
      </button>
    </form>
  </div>
</Layout>
